{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "es2015",
    "outDir": "dist",
    "rootDir": "scripts",
    "sourceMap": true,
    "target": "ES6",
    "pretty": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "filesGlob": [
    "./scripts/**/*.ts",
    "!node_modules/**"
  ]
}